<Window x:Class="Client.Picture"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Picture" Height="300" Width="300">
    <Grid>
        <Menu IsMainMenu="True" VerticalAlignment="Top">
            <MenuItem Header="Image">
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        <Image x:Name="image" HorizontalAlignment="Left" Height="206" VerticalAlignment="Top" Width="292" Margin="0,18,0,0"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="240,236,0,0" TextWrapping="Wrap" Text="Height" VerticalAlignment="Top" Width="42" RenderTransformOrigin="4.667,0.826"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="177,236,0,0" TextWrapping="Wrap" Text="Width" VerticalAlignment="Top" Width="48"/>
        <Button x:Name="button" Content="ChangeSize" HorizontalAlignment="Left" Margin="86,236,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
    </Grid>
</Window>
